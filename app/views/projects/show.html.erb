<h1> <%= @project.name %> </h1>

<%= @project.name %>
<%= @project.material %>
<%= @project.challenge.theme %>
<p>
  Number of contestants: <%= @project.contestants.count %>
</p>
<p>
  Average Contestant Experience: <%= @project.contestants.average_years %> years
</p>


<%= form_tag "/projects/#{@project.id}/contestants", method: :post do %>
<%= label_tag :project_name, @project.name %>
<%= text_field_tag :project_name, @project.name %>
<%= label_tag :project_id, @project.id %>
<%= text_field_tag :project_id, @project.id %>
<%= label_tag :contestant_id %>
<%= text_field_tag :contestant_id %>

<%= submit_tag "Add Contestant To Project" %>
<% end %>
